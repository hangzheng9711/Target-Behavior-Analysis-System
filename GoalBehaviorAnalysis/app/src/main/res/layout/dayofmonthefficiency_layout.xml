<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/LineChart4"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="50%"
        android:layout_gravity="center"
        app:layout_marginTopPercent="5%"
        android:layout_weight="1"/>


    <Button
        android:id="@+id/return_home_9"
        android:layout_marginTop="0dp"
        android:layout_gravity="left|top"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="8%"
        android:text="返回主界面"
        android:textSize="30px" />


    <TextView
        android:id="@+id/spinnerText_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="10%"
        android:textSize="35px"
        />
    <Spinner
        android:id="@+id/spinner_12"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="10%"
        />
    <TextView
        android:id="@+id/spinnerText_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        android:textSize="35px"
        />
    <Spinner
        android:id="@+id/spinner_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        />
    <EditText
        android:id="@+id/workspot3"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:textSize="35px"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="10%"
        />
    <TextView
        android:id="@+id/text_workspot3"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"
        android:text="号工位"
        android:textSize="35px"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="20%" />

    <EditText
        android:id="@+id/year3"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:textSize="35px"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="15%"
        />

    <TextView
        android:id="@+id/text_year3"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="60dp"
        android:text="年"
        android:textSize="35px"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="20%" />
    <EditText
        android:id="@+id/month1"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="40dp"
        android:textSize="35px"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="10%"
        />

    <TextView
        android:id="@+id/text_month1"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="60dp"
        android:text="月"
        android:textSize="35px"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="20%" />
    <Button
        android:id="@+id/ack_month1"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="50dp"
        android:text="确定"
        android:textSize="35px"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="20%" />



</android.support.percent.PercentFrameLayout>