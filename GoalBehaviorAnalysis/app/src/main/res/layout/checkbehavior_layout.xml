<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/return_home_2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dp"
        android:text="返回主界面"
        android:textSize="35px" />


    <EditText
        android:id="@+id/year4"
        android:layout_gravity="center|top"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_marginLeft="120dp"
        android:textSize="40px"
        android:layout_alignParentTop="true"
        android:editable="false"
        />

    <TextView
        android:id="@+id/text_year4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="年"
        android:textSize="40px"
        android:layout_alignBaseline="@+id/year4"
        android:layout_alignBottom="@+id/year4"
        android:layout_toRightOf="@+id/year4"
        android:layout_toEndOf="@+id/year4" />


    <TextView

        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="工位号"
        android:textSize="35px"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textView2" />
    <TextView
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:text="开始时间点"
        android:gravity="center"
        android:textSize="35px"
        android:layout_below="@+id/text_year4"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:text="结束时间点"
        android:textSize="35px"
        android:gravity="center"
        android:layout_below="@+id/text_year4"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/textView3"/>
    <TextView
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="行为性质 "
        android:textSize="35px"
        android:gravity="center"
        android:layout_below="@+id/text_year4"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:id="@+id/textView4"

        />
    <ListView
        android:id="@+id/behavior_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView">
        
    </ListView>


</RelativeLayout>