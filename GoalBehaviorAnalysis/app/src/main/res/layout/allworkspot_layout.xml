<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/Bar_Chart1"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="50%"
        android:layout_gravity="center"
        app:layout_marginTopPercent="5%"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/spinnerText_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="10%"
        android:textSize="35px"
        />
    <Spinner
        android:id="@+id/spinner_2"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="10%"
        />
    <TextView
        android:id="@+id/spinnerText_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        android:textSize="35px"
        />
    <Spinner
        android:id="@+id/spinner_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        />

    <EditText
        android:id="@+id/edit_year_all1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"

        />
    <TextView
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_width="60dp"
        android:layout_marginLeft="100dp"
        android:text="年"
        android:textSize="40px"
        />
    <EditText
        android:id="@+id/edit_month_all1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="130dp"

        />
    <TextView
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_width="60dp"
        android:layout_marginLeft="225dp"
        android:text="月"
        android:textSize="40px"
        />


    <Button
        android:id="@+id/return_home_4"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dp"
        android:text="返回主界面"
        android:textSize="35px"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="35%" />
    <Button
        android:id="@+id/button_allworkok"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="265dp"
        android:text="确定"
        android:textSize="35px"
        />


</android.support.percent.PercentFrameLayout>